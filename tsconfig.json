{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "src/scrapers/**/*",
    "src/cron/**/*",
    "src/**/*.test.ts",
    "src/db/seed.ts",
    "src/db/seed-turso.ts"
  ]
}
